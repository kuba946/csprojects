@model Management.Models.IndexModel


<header>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Forgot Password</h3></div>
                    <div class="card-body">
                        <h4 class="text-center font-weight-light my-4">Contact with Administrators:</h4>
                        @if (Model?.Users is not null)
                        {
                            foreach(var item in Model.Users)
                            {
                                <i class="bi bi-envelope" style="float:left; margin-right: 7px"></i><h5 class="font-weight-light">@item.UserName</h5>
                            }
                        }
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-area="Identity" asp-page="/Account/Login">Have an account? Go to login</a></div>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-area="Identity" asp-page="/Account/Register">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
